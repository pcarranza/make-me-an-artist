#!/usr/bin/env ruby

require_relative '../lib/muse'

def self.main()
  design = Design.new.
    add(pingui).
    add(invader).
    add(galaga).
    add(pacman).
    add(ghost).
    add(pingui).create
  Muse.new(username: "#{ENV['USER']}", 
           design: design,
           workdir: "/tmp",
           # start_date: Date.parse("2015-08-22"),
           # commit_ranges: { zero: 0, low: 20, mid: 40, high: 60, max: 80 }
          ).make_me_an_artist
end

