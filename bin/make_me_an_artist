#!/usr/bin/env ruby

require_relative '../lib/artist'

def self.main()
  design = Design.new(skip_weeks: 1).add(pingui).add(invader).add(galaga).add(pingui).add(invader).add(galaga).create
  Artist::make_me_an_artist(username: "pcarranza", 
                            design: design,
                            workdir: "/tmp",
                            # start_date: Date.parse("2015-08-22"),
                            # commit_ranges: { zero: 0, low: 20, mid: 40, high: 60, max: 80 }
                           ).now
end

def self.pingui
